# Threshold temperature in Celsius for comparison
TEMP_THRESHOLD=25

# Your API key for the weather service (e.g., OpenWeatherMap)
OPENWEATHERMAP_API_KEY=your_api_key_here

# The location for which to retrieve the temperature
LOCATION=your_location_here

# Interval (in seconds) for retrieving the temperature data
# Example: 3600 seconds = 1 hour
RETRIEVAL_INTERVAL=3600